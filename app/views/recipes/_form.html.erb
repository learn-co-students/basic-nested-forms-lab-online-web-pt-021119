<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ing| %>
    <h5>Ingredient</h5>
    <%= ing.label :name %>
    <%= ing.text_field :name %>
    <br>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %>
  <% end %>
  <br>

  <%= f.submit %>
<% end %>
